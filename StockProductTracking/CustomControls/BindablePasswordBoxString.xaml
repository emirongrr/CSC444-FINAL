             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:StockProductTracking.CustomControls"
             xmlns:Theme="clr-namespace:StockProductTracking.Theme"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="800">
    <PasswordBox x:Name="passwordBox"
                               Margin="0,5,0,0"
